# =============================================================================
# Application Settings
# =============================================================================
NEXT_PUBLIC_NAT_WORKFLOW=NeMo Agent Toolkit
NEXT_PUBLIC_NAT_WEB_SOCKET_DEFAULT_ON=false
NEXT_PUBLIC_NAT_CHAT_HISTORY_DEFAULT_ON=false
NEXT_PUBLIC_NAT_RIGHT_MENU_OPEN=false
NEXT_PUBLIC_NAT_ENABLE_INTERMEDIATE_STEPS=true

# =============================================================================
# Backend Configuration
# =============================================================================
# REQUIRED: Backend server address (without protocol)
# Used for both HTTP API and WebSocket connections
# Protocols are added automatically: http/ws in dev, https/wss in production
NEXT_PUBLIC_NAT_BACKEND_ADDRESS=127.0.0.1:8000

# ADVANCED (Optional): Uncomment only for production with separate internal routing
# Example: Docker internal network for API, public domain for WebSocket
# NAT_BACKEND_URL=http://nat-backend-internal:8000

# =============================================================================
# Other Configuration
# =============================================================================
NAT_DEFAULT_MODEL=
NODE_ENV=development
NAT_MAX_FILE_SIZE_STRING=5mb
RAG_UUID=
NEXT_PUBLIC_NAT_SHOW_DATA_STREAM_DEFAULT_ON=false
NEXT_PUBLIC_NAT_ADDITIONAL_VIZ_DEFAULT_ON=false
