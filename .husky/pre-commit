#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Running ESLint..."
npm run lint

# Run type checking
echo "🔍 Running TypeScript check..."
npm run typecheck

# Run tests
echo "🧪 Running tests..."
npm run test

echo "✅ Pre-commit checks passed!"